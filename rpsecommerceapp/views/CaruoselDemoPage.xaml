<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="rpsecommerceapp.views.CaruoselDemoPage">

    <StackLayout Margin="20">
        <Label Text="CarouselView"
               FontSize="50"
               FontAttributes="Bold"
               HorizontalOptions="Center" />
        <CarouselView ItemsSource="{Binding Products}"  IndicatorView="indicatorView">
            
            <CarouselView.ItemTemplate>
               
       
        <DataTemplate>
                    <StackLayout>
                        <Frame HasShadow="True"
                               BorderColor="DarkGray"
                               CornerRadius="5"
                               Margin="20"
                               WidthRequest="300"
                               HeightRequest="300"
                               HorizontalOptions="Center"
                               VerticalOptions="CenterAndExpand">
                            <StackLayout>
                                <FlexLayout HorizontalOptions="CenterAndExpand">
                                    <Label Text="Product Name" 
                                       FontAttributes="Bold"
                                       FontSize="Medium"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" TextColor="OrangeRed" />
                                <Label Text="{Binding Name}" 
                                       FontAttributes="Bold"
                                       FontSize="Medium"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" TextColor="Navy" />
                                </FlexLayout>
                                <FlexLayout HorizontalOptions="CenterAndExpand">
                                    <Label Text="Price" 
                                       FontAttributes="Bold"
                                       FontSize="Medium"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" TextColor="OrangeRed" />
                                    <Label Text="{Binding Price}" 
                                       FontAttributes="Bold"
                                       FontSize="Medium"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" TextColor="Navy" />
                                    </FlexLayout>
                                <FlexLayout HorizontalOptions="CenterAndExpand">
                                    <Label Text="Available Qty" 
                                       FontAttributes="Bold"
                                       FontSize="Medium"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" TextColor="OrangeRed" />
                                    <Label Text="{Binding AvailableQty}" 
                                       FontAttributes="Bold"
                                       FontSize="Medium"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" TextColor="Navy" />
                                   
                                </FlexLayout>
                                <Image Source="{Binding Photo}" 
                                       Aspect="AspectFill"
                                       HeightRequest="150"
                                       WidthRequest="150"
                                       HorizontalOptions="Center" />
                            </StackLayout>
                        </Frame>
                    </StackLayout>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
        <IndicatorView x:Name="indicatorView"
                   IndicatorColor="LightGray"
                   SelectedIndicatorColor="DarkGray"
                   HorizontalOptions="Center" />
    </StackLayout>

</ContentPage>